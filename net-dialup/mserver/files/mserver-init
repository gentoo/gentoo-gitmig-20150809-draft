depend() {
	need net
}

checkconfig() {
	if [ ! -e /etc/mserver.conf ] ; then
		eerror "You need an /etc/mserver.conf file first"
		eerror "There is a sample in /etc/mserver.conf.dist"
		return 1
	fi
}

start() {
	checkconfig || return 1
	ebegin "Starting mserver"
	start-stop-daemon --start --quiet --exec /usr/sbin/mserver
	eend $?
}

stop() {
	ebegin "Stopping mserver"
	start-stop-daemon --stop --quiet --exec /usr/sbin/mserver
	eend $?
}
