#!/sbin/runscript
# Copyright 1999-2002 Gentoo Technologies, Inc.
# Distributed under the terms of the GNU General Public License, v2 or later
# /space/gentoo/cvsroot/gentoo-x86/net-mail/courier/files/courier-pop3d

depend() {
	need net courier-authdaemond
}

start() {
	ebegin "Starting courier pop3d"
	/usr/share/courier/pop3d start
	eend $?
}

stop() {
	ebegin "Stopping courier pop3d"
	/usr/share/courier/pop3d stop
	eend $?
}
