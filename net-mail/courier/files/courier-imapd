depend() {
	need net courier-authdaemond
}

start() {
	ebegin "Starting courier imapd"
	/usr/share/courier/imapd start
	eend $?
}

stop() {
	ebegin "Stopping courier imapd"
	/usr/share/courier/imapd stop
	eend $?
}
