depend() {
	need net courier-authdaemond
}

start() {
	ebegin "Starting courier esmtpd-ssl"
	/usr/share/courier/esmtpd-ssl start
	eend $?
}

stop() {
	ebegin "Stopping courier esmtpd-ssl"
	/usr/share/courier/esmtpd-ssl stop
	eend $?
}
