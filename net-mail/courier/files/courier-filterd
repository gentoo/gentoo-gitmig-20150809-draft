# /space/gentoo/cvsroot/gentoo-x86/net-mail/courier/files/courier-filterd

depend() {
	need net
}

start() {
	ebegin "Starting courier filterd"
	/usr/sbin/courierfilter start
	eend $?
}

stop() {
	ebegin "Stopping courier filterd"
	/usr/sbin/courierfilter stop
	eend $?
}

restart() {
	ebegin "Restarting courier filterd"
	/usr/sbin/courierfilter restart
	eend $?
}
