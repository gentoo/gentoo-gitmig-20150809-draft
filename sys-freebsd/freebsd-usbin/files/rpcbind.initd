depend() {
	need localmount
	use net
	before inetd
	before xinetd
}

start() {
	ebegin "Starting rpcbind"
	rpcbind
	local ret=$?
	eend ${ret}
	
	# without, if a service depending on portmap is started too fast,
	# connecting to portmap will fail -- azarah
	# doing that for rpcbind, too -- flameeyes
	sleep 1
	return ${ret}
}

stop() {
	ebegin "Stopping rpcbind"
	killall rpcbind
	eend $?
}
