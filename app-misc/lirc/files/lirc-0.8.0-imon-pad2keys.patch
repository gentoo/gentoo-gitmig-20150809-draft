+                            if(context->key_x > 0 && rel_x > 0 )
+                            { /* mouse e */
+                                buf[0] = 0x68;
+                                buf[1] = 0x8A;
+                                buf[2] = 0x81;
+                            }
+                            else if(context->key_x < 0 && rel_x < 0  )
+                            { /* mouse w */
+                                buf[0] = 0x6A;
+                                buf[1] = 0x82;
+                                buf[2] = 0x81;
+                            }
+                        }
+                    }
+                    else
+                    {
+                        context->key_x += rel_x;
+                        context->key_y += rel_y;
+
+                        return; /* discard those key codes */
+                    }
