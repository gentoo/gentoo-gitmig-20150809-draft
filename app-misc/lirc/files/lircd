depend()
{
	need net
}

start()
{
	ebegin "Starting lircd"
	start-stop-daemon --start --quiet --exec /usr/sbin/lircd -- ${LIRCD_OPTS}
	eend $?
}

stop()
{
	ebegin "Stopping lircd"
	start-stop-daemon --stop --quiet --exec /usr/sbin/lircd
	eend $?
}
