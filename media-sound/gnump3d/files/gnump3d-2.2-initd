depend() {
	need net
}

start() {
	ebegin "Starting gnump3d"
	start-stop-daemon --start --quiet --exec /usr/bin/gnump3d2 -- --background --quiet
	eend $?
}

stop() {
	ebegin "Stopping gnump3d"
	start-stop-daemon --stop --quiet --pidfile /var/run/gnump3d.pid
	eend $?
}

