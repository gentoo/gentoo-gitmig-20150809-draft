+gam_inotify_legacy_consume_subscriptions_real(gpointer data)
+{
+    GAM_DEBUG(DEBUG_INFO, "gam_inotify_legacy_consume_subscriptions_real()\n");
+    gam_poll_consume_subscriptions();
+    have_consume_idler = FALSE;
+    return FALSE;
