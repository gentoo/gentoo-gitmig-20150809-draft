+static void 
+gam_inotify_legacy_q_overflow (gpointer key, gpointer value, gpointer user_data)
+{
+    inotify_legacy_data_t *data = (inotify_legacy_data_t *)value;
+
+    gam_poll_scan_directory (data->path);
+}
