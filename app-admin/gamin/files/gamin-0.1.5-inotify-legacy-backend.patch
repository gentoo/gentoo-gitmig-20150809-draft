+static void
+gam_inotify_legacy_data_free(inotify_legacy_data_t * data)
+{
+    if (data->refcount != 0) 
+	GAM_DEBUG(DEBUG_INFO, "gam_inotify_legacy_data_free called with reffed data.\n");
+    g_free(data->path);
+    g_free(data);
+}
