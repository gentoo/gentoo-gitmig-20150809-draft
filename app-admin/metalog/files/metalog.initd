opts="buffer unbuffer"

PIDFILE=/var/run/metalog.pid

depend() {
	use clock hostname
	provide logger
}

start() {
	ebegin "Starting metalog"
	/usr/sbin/metalog \
		--daemonize \
		--pidfile=${PIDFILE} \
		${METALOG_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping metalog"
	start-stop-daemon --stop --quiet --pidfile ${PIDFILE}
	eend $?
}

buffer() {
	ebegin "Enabling log buffering"
	kill -USR2 $(<${PIDFILE})
	eend $?
}

unbuffer() {
	ebegin "Disabling log buffering"
	kill -USR1 $(<${PIDFILE})
	eend $?
}
