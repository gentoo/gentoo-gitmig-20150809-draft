# $Header: /var/cvsroot/gentoo-x86/net-analyzer/zabbix-server/files/1.0/init.d/zabbix-trapperd,v 1.3 2005/05/10 10:44:11 swegener Exp $

opts="${opts} reload"

depend() {
	need net
	use mysql postgresql
}

start() {
	ebegin "Starting Zabbix trapperd"
	start-stop-daemon --start --exec /usr/sbin/zabbix_trapperd
	eend
}
stop() {
	ebegin "Stopping Zabbix trapperd"
	start-stop-daemon  --stop --pid $PID
	eend
}
