#!/usr/bin/spython
import sys,portage
for x in sys.argv[1:]:
	#the 0 disables the environment check
	mysetting=portage.getsetting(x,portage.root,0)
	if x=="ROOT":
		#make sure path ends with a "/"
		if len(mysetting)==0:
			mysetting="/"
		elif mysetting[-1]!="/":
			mysetting=mysetting+"/"
	print "export "+x+"='"+mysetting+"'"

