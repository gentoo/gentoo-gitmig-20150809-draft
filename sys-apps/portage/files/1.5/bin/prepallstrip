#!/bin/bash

if [ -n "${DEBUG}" ]
then
	exit
fi	
echo "strip:"
z=`find ${D} -type f \( -perm -0100 -or -perm -0010 -or -perm -0001 -or -name "*.so" -or -name "*.so.*" \)`

for x in $z
do
   f=`file $x`
   if [ "${f/*LSB executable*/1}" == "1"  ]
   then
	echo $x
	strip ${x}
   fi
   if [ "${f/*LSB shared object*/1}" == "1" ]
   then
	echo $x
	strip --strip-unneeded ${x}
   fi
done












