eval `dircolors -b`
alias d="ls --color"
alias ll="ls --color -l"

source /etc/profile.env

if [ `/usr/bin/whoami` == 'root' ] ; then
	export PS1='\[\033[01;32;40m\]\u@\h \[\033[01;34;40m\]\W > \[\033[00m\]'
	export PATH=${ROOTPATH}
else
	export PS1='\[\033[01;34;40m\]\W > \[\033[00m\]'
	unset ROOTPATH
fi
