+control_activate_cb (BonoboObject *control, 
+                     gboolean state,
+                     gpointer callback_data)
+{
+        NautilusView *view;
+        NautilusPrinterContainer *container;
+        
+        view = NAUTILUS_VIEW (callback_data);
+        container = g_object_get_data (G_OBJECT (view), "container");
